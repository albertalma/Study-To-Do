<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_blue"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="10dp" >
			
            <IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="{fa-bookmark}"
                android:textColor="@color/clear_blue"
                android:textSize="30sp"
                android:padding="15dp" />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
	                android:id="@+id/course_name_textview"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="Large Text"
	                android:textAppearance="?android:attr/textAppearanceLarge" />
	
	            <TextView
	                android:id="@+id/course_start_date_textview"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="Medium Text"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/grey" />
	
	            <TextView
	                android:id="@+id/course_end_date_textview"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="Medium Text"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/grey" />
                
            </LinearLayout>
            
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>