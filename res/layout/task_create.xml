<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_task_title" />

        <EditText
            android:id="@+id/title_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textCapSentences" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/description_textView"
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/create_task_description" />

        <EditText
            android:id="@+id/description_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="4" />

        <LinearLayout
            style="@style/FormRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/date_textView"
                style="@style/FormLabel.TextRight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/create_task_date" />

            <EditText
                android:id="@+id/date_editText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="datetime" />
        </LinearLayout>

        <LinearLayout
            style="@style/FormRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/priority_textView"
                style="@style/FormLabel.TextRight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/create_task_priority" />

            <Spinner
                android:id="@+id/priority_spinner"
                style="@style/SpinnerStudyToDoTheme"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
        </LinearLayout>

        <TextView
            style="@style/FormLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_task_place" />

        <EditText
            android:id="@+id/place_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textCapSentences" >

            <requestFocus />
        </EditText>

        <TimePicker
            android:id="@+id/timePickerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <DatePicker
            android:id="@+id/datePickerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <LinearLayout
            style="@style/FormRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/percentage_textView"
                style="@style/FormLabel.TextRight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="@string/create_task_percentage" />

            <EditText
                android:id="@+id/percentage_editText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5333"
                android:ems="10"
                android:gravity="right"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView6"
                style="@style/FormLabel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_horizontal"
                android:text="@string/create_task_percentage_mark"
                android:textColor="@color/dark_orange" />
        </LinearLayout>

        <LinearLayout
            style="@style/FormRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/subject_textView"
                style="@style/FormLabel.TextRight"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/create_task_subject" />

            <Spinner
                android:id="@+id/subject_spinner"
                style="@style/SpinnerStudyToDoTheme"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>